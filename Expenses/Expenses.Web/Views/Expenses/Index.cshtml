@*@model IEnumerable<Expenses.Model.ExpenseModel>*@
@using PagedList.Core;
@using PagedList.Core.Mvc;
@using Expenses.Model;
@model PagedList.Core.PagedList<ExpenseModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    @Html.ActionLink("Add Expense", "Create", new { @class = "btn btn-default" })
</p>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Money Expense</th>
        <th>Epense Day</th>
        <th>Category</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.ID)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoneySpent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })|
                @Html.ActionLink("Details", "Details", new { id = item.ID })| 
                @using (Html.BeginForm("Delete", "Expenses", new { id = item.ID }, FormMethod.Post, null, new { onsubmit = "return confirm ('Are you sure you want to delete this?');" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-default" />
                }
            </td>
        </tr>
    }
</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div>
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
    </ul>
</div>